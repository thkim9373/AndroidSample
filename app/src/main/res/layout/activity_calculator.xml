<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textAlignment="textEnd"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Number" />

        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/bt_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_number"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_1"
            app:layout_constraintTop_toBottomOf="@id/tv_number"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_2"
            app:layout_constraintTop_toBottomOf="@id/tv_number"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_1"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_4"
            app:layout_constraintTop_toBottomOf="@id/bt_1"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_5"
            app:layout_constraintTop_toBottomOf="@id/bt_1"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_4"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_4"
            app:layout_constraintTop_toBottomOf="@id/bt_5"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_5"
            app:layout_constraintTop_toBottomOf="@id/bt_6"
            app:layout_constraintWidth_percent="0.25" />

        <Button
            android:id="@+id/bt_addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_7" />

        <Button
            android:id="@+id/bt_subtration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_addition"
            app:layout_constraintTop_toBottomOf="@id/bt_7" />

        <Button
            android:id="@+id/bt_multiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_subtration"
            app:layout_constraintTop_toBottomOf="@id/bt_7" />

        <Button
            android:id="@+id/bt_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/bt_multiple"
            app:layout_constraintTop_toBottomOf="@id/bt_7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>